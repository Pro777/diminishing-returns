#!/usr/bin/env bash
set -euo pipefail

# Convenience wrapper for local development.
# Runs the DR scorer without requiring an editable install.

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

if [[ $# -lt 1 ]]; then
  echo "Usage: bin/dr-score-file <transcript.json|transcript.jsonl>" >&2
  exit 2
fi

export PYTHONPATH="$ROOT/src${PYTHONPATH:+:$PYTHONPATH}"
exec python3 -m dr.cli score "$1"
